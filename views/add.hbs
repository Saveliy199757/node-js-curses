<h1>Add courses</h1>

<form action="/add" method="post">
    <div class="input-field col s6">
        <input id="title" type="text" class="validate" name="title" required placeholder="Название курса" >
        <span class="helper-text" data-error="Введите название курса"></span>
    </div>
    <div class="input-field col s6">
        <input id="price" type="number" class="validate" name="price" placeholder="Цена" required >
        <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field col s6">
        <input id="img" type="text" class="validate" name="img" placeholder="Картинка" required>
        <span class="helper-text" data-error="Введите url картинки"></span>
    </div>
    <button class="btn btn-primary">Добавить</button>
</form>